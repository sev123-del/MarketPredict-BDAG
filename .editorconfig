root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.{yml,yaml,json,js,jsx,ts,tsx,css,scss,html}]
indent_style = space
indent_size = 2

[*.sol]
indent_style = space
indent_size = 4

[*.{ps1,bat,cmd}]
end_of_line = crlf

{
    "name": "marketpredict-bdag-root",
    "private": true,
    "engines": {
        "node": ">=20 <24"
    },
    "scripts": {
        "dev": "npm --prefix frontend run dev",
        "test:contracts": "npm --prefix contracts/hardhat test",
        "test:frontend": "npm --prefix frontend run test:ci",
        "test": "npm run test:contracts && npm run test:frontend",
        "security-scan": "node ./scripts/security-scan.js",
        "snyk:code": "snyk code test ./frontend/src ./contracts/hardhat --severity-threshold=medium",
        "snyk:oss": "snyk test --all-projects --severity-threshold=high --exclude=node_modules,.next,dist,build,coverage,artifacts,cache,.cache,.turbo",
        "snyk:test": "npm run snyk:oss",
        "snyk:monitor": "snyk monitor --all-projects",
        "snyk:ci": "npm run snyk:oss && npm run snyk:code",
        "check-deps": "cd frontend && npm run check-deps",
        "lint:frontend": "cd frontend && npm run lint",
        "prepare": "node scripts/prepare-husky.js"
    },
    "devDependencies": {
        "husky": "^8.0.0",
        "snyk": "^1.1298.0"
    }
}